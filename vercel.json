{
  "crons": [
    {
      "path": "/api/send-reminder?secret=${CRON_SECRET}",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/send-weekly?secret=${CRON_SECRET}",
      "schedule": "0 14 * * 0"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
